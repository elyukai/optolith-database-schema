{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "/specialAbility/BlessedTradition.schema.json",
  "$ref": "#/$defs/BlessedTradition",
  "$defs": {
    "BlessedTradition": {
      "title": "Blessed Tradition",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "../_Activatable.schema.json#/$defs/Id"
        },
        "select_options": {
          "$ref": "../_Activatable.schema.json#/$defs/SelectOptions"
        },
        "skill_applications": {
          "$ref": "../_Activatable.schema.json#/$defs/SkillApplications"
        },
        "skill_uses": {
          "$ref": "../_Activatable.schema.json#/$defs/SkillUses"
        },
        "primary": {
          "description": "The tradition's primary attribute. Leave empty if the tradition does not\nhave one.",
          "$ref": "../_SimpleReferences.schema.json#/$defs/AttributeReference"
        },
        "aspects": {
          "description": "The tradition's aspects, if any.",
          "type": "array",
          "items": [
            {
              "$ref": "../_SimpleReferences.schema.json#/$defs/AspectReference"
            },
            {
              "$ref": "../_SimpleReferences.schema.json#/$defs/AspectReference"
            }
          ],
          "minItems": 2,
          "maxItems": 2,
          "additionalItems": false
        },
        "restricted_blessings": {
          "description": "If a tradition restricts the possible blessings, the blessings that are\n**not** allowed.",
          "$ref": "#/$defs/RestrictedBlessings"
        },
        "favored_combat_techniques": {
          "description": "A list of favored combat techniques.",
          "$ref": "#/$defs/FavoredCombatTechniques"
        },
        "favored_skills": {
          "description": "A list of favored skills.",
          "type": "array",
          "items": {
            "$ref": "../_SimpleReferences.schema.json#/$defs/SkillReference"
          },
          "minItems": 1
        },
        "favored_skills_selection": {
          "description": "On activation of the tradition, a specific number of skills from a list of\nskills must be selected as being favored.",
          "$ref": "#/$defs/FavoredSkillsSelection"
        },
        "is_shamanistic": {
          "description": "Is this a schamanistic tradition?",
          "type": "boolean"
        },
        "associated_principles_id": {
          "description": "The select option's identifier of the disadvantage *Principles* that\nrepresent this tradition's code, if any.",
          "type": "number"
        },
        "prerequisites": {
          "$ref": "../_Prerequisite.schema.json#/$defs/GeneralPrerequisites"
        },
        "ap_value": {
          "$ref": "../_Activatable.schema.json#/$defs/AdventurePointsValue"
        },
        "src": {
          "$ref": "../source/_PublicationRef.schema.json#/$defs/PublicationRefs"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/BlessedTraditionTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "favored_skills",
        "is_shamanistic",
        "ap_value",
        "src",
        "translations"
      ],
      "additionalProperties": false
    },
    "RestrictedBlessings": {
      "description": "If a tradition restricts the possible blessings, the blessings that are\n**not** allowed.",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Three"
            },
            "three": {
              "$ref": "#/$defs/ThreeRestrictedBlessings"
            }
          },
          "required": [
            "tag",
            "three"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Six"
            },
            "six": {
              "$ref": "#/$defs/SixRestrictedBlessings"
            }
          },
          "required": [
            "tag",
            "six"
          ],
          "additionalProperties": false
        }
      ]
    },
    "ThreeRestrictedBlessings": {
      "type": "array",
      "items": [
        {
          "$ref": "../_SimpleReferences.schema.json#/$defs/BlessingReference"
        },
        {
          "$ref": "../_SimpleReferences.schema.json#/$defs/BlessingReference"
        },
        {
          "$ref": "../_SimpleReferences.schema.json#/$defs/BlessingReference"
        }
      ],
      "minItems": 3,
      "maxItems": 3,
      "additionalItems": false
    },
    "SixRestrictedBlessings": {
      "type": "array",
      "items": [
        {
          "$ref": "../_SimpleReferences.schema.json#/$defs/BlessingReference"
        },
        {
          "$ref": "../_SimpleReferences.schema.json#/$defs/BlessingReference"
        },
        {
          "$ref": "../_SimpleReferences.schema.json#/$defs/BlessingReference"
        },
        {
          "$ref": "../_SimpleReferences.schema.json#/$defs/BlessingReference"
        },
        {
          "$ref": "../_SimpleReferences.schema.json#/$defs/BlessingReference"
        },
        {
          "$ref": "../_SimpleReferences.schema.json#/$defs/BlessingReference"
        }
      ],
      "minItems": 6,
      "maxItems": 6,
      "additionalItems": false
    },
    "FavoredCombatTechniques": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "All"
            },
            "all": {
              "type": "object",
              "properties": {},
              "required": [],
              "additionalProperties": false
            }
          },
          "required": [
            "tag",
            "all"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "AllClose"
            },
            "all_close": {
              "type": "object",
              "properties": {},
              "required": [],
              "additionalProperties": false
            }
          },
          "required": [
            "tag",
            "all_close"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "AllUsedInHunting"
            },
            "all_used_in_hunting": {
              "type": "object",
              "properties": {},
              "required": [],
              "additionalProperties": false
            }
          },
          "required": [
            "tag",
            "all_used_in_hunting"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Specific"
            },
            "specific": {
              "$ref": "#/$defs/SpecificFavoredCombatTechniques"
            }
          },
          "required": [
            "tag",
            "specific"
          ],
          "additionalProperties": false
        }
      ]
    },
    "SpecificFavoredCombatTechniques": {
      "type": "object",
      "properties": {
        "list": {
          "description": "A list of specific favored combat techniques.",
          "type": "array",
          "items": {
            "$ref": "../_SimpleReferences.schema.json#/$defs/CombatTechniqueReference"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      },
      "required": [
        "list"
      ],
      "additionalProperties": false
    },
    "FavoredSkillsSelection": {
      "type": "object",
      "properties": {
        "number": {
          "description": "The number of skills that can be selected.",
          "type": "integer",
          "minimum": 1
        },
        "options": {
          "description": "The possible set of skills.",
          "type": "array",
          "items": {
            "$ref": "../_SimpleReferences.schema.json#/$defs/SkillReference"
          },
          "minItems": 2,
          "uniqueItems": true
        }
      },
      "required": [
        "number",
        "options"
      ],
      "additionalProperties": false
    },
    "BlessedTraditionTranslation": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "../_Activatable.schema.json#/$defs/Name"
        },
        "name_compressed": {
          "description": "A shorter name of the tradition's name, used in liturgical chant\ndescriptions.",
          "type": "string",
          "minLength": 1
        },
        "name_in_library": {
          "$ref": "../_Activatable.schema.json#/$defs/NameInLibrary"
        },
        "special_rules": {
          "description": "The special rules of the tradition. They should be sorted like they are\nin the book.",
          "type": "array",
          "items": {
            "$ref": "./_Tradition.schema.json#/$defs/SpecialRule"
          },
          "minItems": 1
        },
        "errata": {
          "$ref": "../source/_Erratum.schema.json#/$defs/Errata"
        }
      },
      "required": [
        "name",
        "special_rules"
      ],
      "additionalProperties": false
    }
  }
}
