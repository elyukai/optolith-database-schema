{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "/specialAbility/sub/Language.schema.json",
  "$ref": "#/$defs/Language",
  "$defs": {
    "Language": {
      "title": "Language",
      "type": "object",
      "properties": {
        "id": {
          "description": "The language's identifier. An unique, increasing integer.",
          "type": "integer",
          "minimum": 1
        },
        "continent": {
          "description": "The continents this language is present on.",
          "type": "array",
          "items": {
            "$ref": "./_LanguageScript.schema.json#/$defs/AssociatedContinent"
          },
          "minItems": 1
        },
        "specializations": {
          "description": "Language-specific specializations. Either a list of possible options or a\nindefinite description of what may be a specialization.",
          "$ref": "#/$defs/Specializations"
        },
        "prerequisites": {
          "$ref": "../../_Prerequisite.schema.json#/$defs/LanguagePrerequisites"
        },
        "max_level": {
          "description": "The maximum possible level of the language. Only specified if lower than\ndefault of 3.",
          "type": "number",
          "default": 3,
          "maximum": 2,
          "minimum": 1
        },
        "src": {
          "$ref": "../../source/_PublicationRef.schema.json#/$defs/PublicationRefs"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/LanguageTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "continent",
        "specializations",
        "src",
        "translations"
      ],
      "additionalProperties": false
    },
    "Specializations": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Specific"
            },
            "specific": {
              "$ref": "#/$defs/SpecificSpecializations"
            }
          },
          "required": [
            "tag",
            "specific"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Indefinite"
            },
            "indefinite": {
              "$ref": "#/$defs/IndefiniteSpecializations"
            }
          },
          "required": [
            "tag",
            "indefinite"
          ],
          "additionalProperties": false
        }
      ]
    },
    "SpecificSpecializations": {
      "type": "object",
      "properties": {
        "list": {
          "description": "A list of specific possible specializations.",
          "type": "array",
          "items": {
            "$ref": "#/$defs/SpecificSpecialization"
          },
          "minItems": 1
        }
      },
      "required": [
        "list"
      ],
      "additionalProperties": false
    },
    "SpecificSpecialization": {
      "type": "object",
      "properties": {
        "id": {
          "description": "The specialization's identifier. An unique, increasing integer.",
          "type": "integer",
          "minimum": 1
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/SpecificSpecializationTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "translations"
      ],
      "additionalProperties": false
    },
    "SpecificSpecializationTranslation": {
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the specialization.",
          "$ref": "../../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        },
        "description": {
          "description": "The specialization description. It will be appended to the name in\nparenthesis.",
          "$ref": "../../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "IndefiniteSpecializations": {
      "type": "object",
      "properties": {
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/IndefiniteSpecializationsTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "translations"
      ],
      "additionalProperties": false
    },
    "IndefiniteSpecializationsTranslation": {
      "type": "object",
      "properties": {
        "description": {
          "description": "The specializations description.",
          "$ref": "../../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        },
        "label": {
          "description": "An input label or placeholder text for an UI element if it differs\nfrom the `description`.",
          "$ref": "../../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        }
      },
      "required": [
        "description"
      ],
      "additionalProperties": false
    },
    "LanguageTranslation": {
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the language.",
          "$ref": "../../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        },
        "alternative_names": {
          "description": "A list of alternative names.",
          "type": "array",
          "items": {
            "$ref": "../../_AlternativeNames.schema.json#/$defs/AlternativeName"
          },
          "minItems": 1
        },
        "description": {
          "description": "The description of the language.",
          "$ref": "../../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        },
        "errata": {
          "$ref": "../../source/_Erratum.schema.json#/$defs/Errata"
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    }
  }
}
