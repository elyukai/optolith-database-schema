{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "/source/_PublicationRef.schema.json",
  "$ref": "#/$defs/PublicationRefs",
  "$defs": {
    "PublicationRefs": {
      "title": "Publication References",
      "description": "The publications where you can find the entry.",
      "type": "array",
      "items": {
        "$ref": "#/$defs/PublicationRef"
      },
      "minItems": 1
    },
    "PublicationRef": {
      "title": "Publication Reference",
      "description": "A source reference. It contains the book's publisher identifier and the page\nwhere it occurs. If an entry spans multiple pages, provide the last page as\nwell.",
      "type": "object",
      "properties": {
        "id": {
          "description": "The publication's identifier.",
          "$ref": "../_Identifier.schema.json#/$defs/PublicationIdentifier"
        },
        "occurrences": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/Occurrence"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "occurrences"
      ],
      "additionalProperties": false
    },
    "Occurrence": {
      "oneOf": [
        {
          "$ref": "#/$defs/SimpleOccurrence"
        },
        {
          "$ref": "#/$defs/SimpleOccurrences"
        },
        {
          "$ref": "#/$defs/VersionedOccurrence"
        }
      ]
    },
    "SimpleOccurrences": {
      "title": "Simple Occurrences",
      "type": "array",
      "items": {
        "$ref": "#/$defs/SimpleOccurrence"
      },
      "minItems": 1
    },
    "SimpleOccurrence": {
      "title": "Simple Occurrence",
      "type": "object",
      "properties": {
        "first_page": {
          "description": "The page where it occurs. If the entry spans multiple pages, use this as\nthe first page and `last_page` as the last page.",
          "type": "integer",
          "minimum": 1
        },
        "last_page": {
          "description": "The last page where it occurs. If there is only one page, set this to the\nsame as `first_page` oder remove it.",
          "type": "integer",
          "minimum": 2
        }
      },
      "required": [
        "first_page"
      ],
      "additionalProperties": false
    },
    "VersionedOccurrence": {
      "title": "Versioned Occurrence",
      "type": "object",
      "properties": {
        "initial": {
          "description": "The initial occurrence of the entry.",
          "$ref": "#/$defs/InitialOccurrence"
        },
        "revisions": {
          "description": "Revisions of the entry, resulting in either changed page references or\nre-addition or removal of an entry.",
          "type": "array",
          "items": {
            "$ref": "#/$defs/Revision"
          },
          "minItems": 1
        }
      },
      "required": [
        "initial"
      ],
      "additionalProperties": false
    },
    "InitialOccurrence": {
      "title": "Initial Occurrence",
      "type": "object",
      "properties": {
        "printing": {
          "description": "The publication's printing since which the entry is present. Leave\nempty if present since the beginning.",
          "type": "integer",
          "minimum": 2
        },
        "pages": {
          "description": "The initial page references.",
          "type": "array",
          "items": {
            "$ref": "#/$defs/PageRange"
          },
          "minItems": 1
        }
      },
      "required": [
        "pages"
      ],
      "additionalProperties": false
    },
    "Revision": {
      "title": "Revision",
      "description": "A revision of the entry, resulting in either changed page references or\nre-addition or removal of an entry.",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Since"
            },
            "since": {
              "$ref": "#/$defs/Since"
            }
          },
          "required": [
            "tag",
            "since"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Deprecated"
            },
            "deprecated": {
              "$ref": "#/$defs/Deprecation"
            }
          },
          "required": [
            "tag",
            "deprecated"
          ],
          "additionalProperties": false
        }
      ]
    },
    "Since": {
      "type": "object",
      "properties": {
        "printing": {
          "description": "The publication's printing since which the entry is present again or has\nchanged page references.",
          "type": "integer",
          "minimum": 2
        },
        "pages": {
          "description": "The changed or new page references.",
          "type": "array",
          "items": {
            "$ref": "#/$defs/PageRange"
          },
          "minItems": 1
        }
      },
      "required": [
        "printing",
        "pages"
      ],
      "additionalProperties": false
    },
    "Deprecation": {
      "type": "object",
      "properties": {
        "printing": {
          "description": "The publication's printing since which the entry has been removed.",
          "type": "integer",
          "minimum": 2
        }
      },
      "required": [
        "printing"
      ],
      "additionalProperties": false
    },
    "PageRange": {
      "title": "Page Range",
      "type": "object",
      "properties": {
        "first_page": {
          "description": "The page where it occurs. If the entry spans multiple pages, use this as\nthe first page and `last_page` as the last page.",
          "$ref": "#/$defs/Page"
        },
        "last_page": {
          "description": "The last page where it occurs. If there is only one page, set this to the\nsame as `first_page` oder remove it.",
          "$ref": "#/$defs/Page"
        }
      },
      "required": [
        "first_page"
      ],
      "additionalProperties": false
    },
    "Page": {
      "title": "Page",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "InsideCoverFront"
            },
            "inside_cover_front": {
              "type": "object",
              "properties": {},
              "required": [],
              "additionalProperties": false
            }
          },
          "required": [
            "tag",
            "inside_cover_front"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "InsideCoverBack"
            },
            "inside_cover_back": {
              "type": "object",
              "properties": {},
              "required": [],
              "additionalProperties": false
            }
          },
          "required": [
            "tag",
            "inside_cover_back"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Numbered"
            },
            "numbered": {
              "$ref": "#/$defs/NumberedPage"
            }
          },
          "required": [
            "tag",
            "numbered"
          ],
          "additionalProperties": false
        }
      ]
    },
    "NumberedPage": {
      "description": "The page number.",
      "type": "integer"
    }
  }
}
