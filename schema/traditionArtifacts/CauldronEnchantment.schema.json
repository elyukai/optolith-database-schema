{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "/traditionArtifacts/CauldronEnchantment.schema.json",
  "$ref": "#/$defs/CauldronEnchantment",
  "$defs": {
    "CauldronEnchantment": {
      "title": "Cauldron Enchantment",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "../_Activatable.schema.json#/$defs/Id"
        },
        "levels": {
          "$ref": "../_Activatable.schema.json#/$defs/Levels"
        },
        "select_options": {
          "$ref": "../_Activatable.schema.json#/$defs/SelectOptions"
        },
        "maximum": {
          "$ref": "../_Activatable.schema.json#/$defs/Maximum"
        },
        "prerequisites": {
          "$ref": "../_Prerequisite.schema.json#/$defs/GeneralPrerequisites"
        },
        "volume": {
          "$ref": "../_Activatable.schema.json#/$defs/Volume"
        },
        "brew": {
          "description": "Witches can learn to brew special things in their Witch's Cauldron. These\nbrews can be categorized in different types.",
          "$ref": "#/$defs/BrewReference"
        },
        "cost": {
          "$ref": "../_Activatable.schema.json#/$defs/EnchantmentCost"
        },
        "property": {
          "$ref": "../_Activatable.schema.json#/$defs/Property"
        },
        "ap_value": {
          "$ref": "../_Activatable.schema.json#/$defs/AdventurePointsValue"
        },
        "src": {
          "$ref": "../source/_PublicationRef.schema.json#/$defs/PublicationRefs"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/CauldronEnchantmentTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "volume",
        "brew",
        "property",
        "ap_value",
        "src",
        "translations"
      ],
      "additionalProperties": false
    },
    "BrewReference": {
      "type": "object",
      "properties": {
        "id": {
          "description": "The brew's identifier.",
          "type": "integer",
          "maximum": 4,
          "minimum": 1
        }
      },
      "required": [
        "id"
      ],
      "additionalProperties": false
    },
    "CauldronEnchantmentTranslation": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "../_Activatable.schema.json#/$defs/Name"
        },
        "name_in_library": {
          "$ref": "../_Activatable.schema.json#/$defs/NameInLibrary"
        },
        "effect": {
          "$ref": "../_Activatable.schema.json#/$defs/Effect"
        },
        "volume": {
          "type": "string"
        },
        "aeCost": {
          "type": "string"
        },
        "bindingCost": {
          "type": "string"
        },
        "errata": {
          "$ref": "../source/_Erratum.schema.json#/$defs/Errata"
        }
      },
      "required": [
        "name",
        "effect",
        "volume"
      ],
      "additionalProperties": false
    }
  }
}
