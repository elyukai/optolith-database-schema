{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "/magicalActions/MagicalMelody.schema.json",
  "$ref": "#/$defs/MagicalMelody",
  "$defs": {
    "MagicalMelody": {
      "title": "Magical Melody",
      "type": "object",
      "properties": {
        "id": {
          "description": "The magical melody's identifier. An unique, increasing integer.",
          "type": "integer",
          "minimum": 1
        },
        "check": {
          "description": "Lists the linked three attributes used to make a skill check.",
          "$ref": "../_SkillCheck.schema.json#/$defs/SkillCheck"
        },
        "check_penalty": {
          "description": "In some cases, the target's Spirit or Toughness is applied as a penalty.",
          "$ref": "../_SkillCheck.schema.json#/$defs/SkillCheckPenalty"
        },
        "skill": {
          "description": "Arcane bards must make a *Singing (area of application)* or *Music (area of\napplication)* check for each magical melody.",
          "type": "array",
          "items": {
            "$ref": "./_SkillReference.schema.json#/$defs/MusicalSkillReference"
          },
          "minItems": 1,
          "maxItems": 2,
          "uniqueItems": true
        },
        "parameters": {
          "description": "Measurable parameters of a magical melody.",
          "$ref": "#/$defs/MagicalMelodyPerformanceParameters"
        },
        "property": {
          "description": "The associated property.",
          "$ref": "../_SimpleReferences.schema.json#/$defs/PropertyReference"
        },
        "music_tradition": {
          "description": "The music tradition(s) the magical melody is available for. This also\ndefines the different names in each music tradition.",
          "type": "array",
          "items": {
            "$ref": "./_MusicTradition.schema.json#/$defs/MusicTraditionReference"
          },
          "minItems": 1
        },
        "improvement_cost": {
          "description": "States which column is used to improve the skill.",
          "$ref": "../_ImprovementCost.schema.json#/$defs/ImprovementCost"
        },
        "src": {
          "$ref": "../source/_PublicationRef.schema.json#/$defs/PublicationRefs"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/MagicalMelodyTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "check",
        "skill",
        "parameters",
        "property",
        "music_tradition",
        "improvement_cost",
        "src",
        "translations"
      ],
      "additionalProperties": false
    },
    "MagicalMelodyTranslation": {
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the magical melody.",
          "$ref": "../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        },
        "effect": {
          "description": "The effect description may be either a plain text or a text that is\ndivided by a list of effects for each quality level. It may also be a\nlist for each two quality levels.",
          "$ref": "../_ActivatableSkillEffect.schema.json#/$defs/Effect"
        },
        "duration": {
          "type": "object",
          "properties": {
            "full": {
              "type": "string"
            },
            "abbr": {
              "type": "string"
            }
          },
          "required": [
            "full",
            "abbr"
          ],
          "additionalProperties": false
        },
        "cost": {
          "type": "object",
          "properties": {
            "full": {
              "type": "string"
            },
            "abbr": {
              "type": "string"
            }
          },
          "required": [
            "full",
            "abbr"
          ],
          "additionalProperties": false
        },
        "errata": {
          "$ref": "../source/_Erratum.schema.json#/$defs/Errata"
        }
      },
      "required": [
        "name",
        "effect",
        "duration",
        "cost"
      ],
      "additionalProperties": false
    },
    "MagicalMelodyPerformanceParameters": {
      "description": "Measurable parameters of a magical melody.",
      "type": "object",
      "properties": {
        "duration": {
          "$ref": "./_MusicTradition.schema.json#/$defs/MusicDuration"
        },
        "cost": {
          "$ref": "#/$defs/MagicalMelodyCost"
        }
      },
      "required": [
        "duration",
        "cost"
      ],
      "additionalProperties": false
    },
    "MagicalMelodyCost": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Fixed"
            },
            "fixed": {
              "$ref": "#/$defs/FixedMagicalMelodyCost"
            }
          },
          "required": [
            "tag",
            "fixed"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "FirstPerson"
            },
            "first_person": {
              "$ref": "#/$defs/FirstPersonMagicalMelodyCost"
            }
          },
          "required": [
            "tag",
            "first_person"
          ],
          "additionalProperties": false
        }
      ]
    },
    "FixedMagicalMelodyCost": {
      "type": "object",
      "properties": {
        "value": {
          "description": "The (temporary) AE cost value.",
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    },
    "FirstPersonMagicalMelodyCost": {
      "type": "object",
      "properties": {
        "value": {
          "description": "The (temporary) AE cost value for the first targeted person. The AE\ncost for each additional person is half this value.",
          "type": "integer",
          "minimum": 1,
          "multipleOf": 2
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    }
  }
}
