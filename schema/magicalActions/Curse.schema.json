{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "/magicalActions/Curse.schema.json",
  "$ref": "#/$defs/Curse",
  "$defs": {
    "Curse": {
      "title": "Curse",
      "type": "object",
      "properties": {
        "id": {
          "description": "The curse's identifier. An unique, increasing integer.",
          "type": "integer",
          "minimum": 1
        },
        "check": {
          "description": "Lists the linked three attributes used to make a skill check.",
          "$ref": "../_SkillCheck.schema.json#/$defs/SkillCheck"
        },
        "check_penalty": {
          "description": "In some cases, the target's Spirit or Toughness is applied as a penalty.",
          "$ref": "../_SkillCheck.schema.json#/$defs/SkillCheckPenalty"
        },
        "parameters": {
          "description": "Measurable parameters of a curse.",
          "$ref": "#/$defs/CursePerformanceParameters"
        },
        "property": {
          "description": "The associated property.",
          "$ref": "../_SimpleReferences.schema.json#/$defs/PropertyReference"
        },
        "src": {
          "$ref": "../source/_PublicationRef.schema.json#/$defs/PublicationRefs"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/CurseTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "check",
        "parameters",
        "property",
        "src",
        "translations"
      ],
      "additionalProperties": false
    },
    "CurseTranslation": {
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the curse.",
          "$ref": "../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        },
        "effect": {
          "description": "The effect description may be either a plain text or a text that is\ndivided by a list of effects for each quality level. It may also be a\nlist for each two quality levels.",
          "$ref": "../_ActivatableSkillEffect.schema.json#/$defs/Effect"
        },
        "cost": {
          "type": "object",
          "properties": {
            "full": {
              "type": "string"
            },
            "abbr": {
              "type": "string"
            }
          },
          "required": [
            "full",
            "abbr"
          ],
          "additionalProperties": false
        },
        "duration": {
          "type": "object",
          "properties": {
            "full": {
              "type": "string"
            },
            "abbr": {
              "type": "string"
            }
          },
          "required": [
            "full",
            "abbr"
          ],
          "additionalProperties": false
        },
        "errata": {
          "$ref": "../source/_Erratum.schema.json#/$defs/Errata"
        }
      },
      "required": [
        "name",
        "effect",
        "cost",
        "duration"
      ],
      "additionalProperties": false
    },
    "CursePerformanceParameters": {
      "description": "Measurable parameters of a curse.",
      "type": "object",
      "properties": {
        "cost": {
          "description": "The AE cost.",
          "$ref": "#/$defs/CurseCost"
        },
        "duration": {
          "description": "The duration.",
          "$ref": "#/$defs/CurseDuration"
        }
      },
      "required": [
        "cost",
        "duration"
      ],
      "additionalProperties": false
    },
    "CurseCost": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Fixed"
            },
            "fixed": {
              "$ref": "#/$defs/FixedCurseCost"
            }
          },
          "required": [
            "tag",
            "fixed"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Indefinite"
            },
            "indefinite": {
              "$ref": "../_ActivatableSkillCost.schema.json#/$defs/IndefiniteOneTimeCost"
            }
          },
          "required": [
            "tag",
            "indefinite"
          ],
          "additionalProperties": false
        }
      ]
    },
    "FixedCurseCost": {
      "type": "object",
      "properties": {
        "value": {
          "description": "The (temporary) AE cost value.",
          "type": "integer",
          "minimum": 1
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/FixedCurseCostTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    },
    "FixedCurseCostTranslation": {
      "type": "object",
      "properties": {
        "per": {
          "description": "The cost have to be per a specific countable entity, e.g. `8 KP\nper person`.",
          "$ref": "../_ResponsiveText.schema.json#/$defs/ResponsiveText"
        },
        "note": {
          "description": "A note, appended to the generated string in parenthesis.",
          "$ref": "../_ResponsiveText.schema.json#/$defs/ResponsiveTextOptional"
        }
      },
      "required": [],
      "minProperties": 1,
      "additionalProperties": false
    },
    "CurseDuration": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Immediate"
            },
            "immediate": {
              "type": "object",
              "properties": {},
              "required": [],
              "additionalProperties": false
            }
          },
          "required": [
            "tag",
            "immediate"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Fixed"
            },
            "fixed": {
              "$ref": "#/$defs/FixedCurseDuration"
            }
          },
          "required": [
            "tag",
            "fixed"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "CheckResultBased"
            },
            "check_result_based": {
              "$ref": "../_ActivatableSkillDuration.schema.json#/$defs/CheckResultBasedDuration"
            }
          },
          "required": [
            "tag",
            "check_result_based"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Indefinite"
            },
            "indefinite": {
              "$ref": "#/$defs/IndefiniteCurseDuration"
            }
          },
          "required": [
            "tag",
            "indefinite"
          ],
          "additionalProperties": false
        }
      ]
    },
    "FixedCurseDuration": {
      "type": "object",
      "properties": {
        "value": {
          "description": "The (unitless) duration value.",
          "type": "integer",
          "minimum": 1
        },
        "unit": {
          "description": "The unit of the `value`.",
          "$ref": "../_ActivatableSkillDuration.schema.json#/$defs/DurationUnit"
        }
      },
      "required": [
        "value",
        "unit"
      ],
      "additionalProperties": false
    },
    "IndefiniteCurseDuration": {
      "type": "object",
      "properties": {
        "maximum": {
          "description": "Specified if the duration has a maximum time span.",
          "$ref": "#/$defs/MaximumIndefiniteCurseDuration"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "../_ActivatableSkillDuration.schema.json#/$defs/IndefiniteDurationTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "translations"
      ],
      "additionalProperties": false
    },
    "MaximumIndefiniteCurseDuration": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Fixed"
            },
            "fixed": {
              "$ref": "#/$defs/FixedCurseDuration"
            }
          },
          "required": [
            "tag",
            "fixed"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "CheckResultBased"
            },
            "check_result_based": {
              "$ref": "../_ActivatableSkillDuration.schema.json#/$defs/CheckResultBasedDuration"
            }
          },
          "required": [
            "tag",
            "check_result_based"
          ],
          "additionalProperties": false
        }
      ]
    }
  }
}
