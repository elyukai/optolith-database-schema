{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "/magicalActions/MagicalRune.schema.json",
  "$ref": "#/$defs/MagicalRune",
  "$defs": {
    "MagicalRune": {
      "title": "Magical Rune",
      "type": "object",
      "properties": {
        "id": {
          "description": "The magical rune's identifier. An unique, increasing integer.",
          "type": "integer",
          "minimum": 1
        },
        "options": {
          "description": "The options the magical rune has, if any.\n\nIf there are multiple options, the magical rune may be activated for each\noption, that is, multiple times.",
          "type": "array",
          "items": {
            "$ref": "#/$defs/MagicalRuneOption"
          }
        },
        "check": {
          "description": "Lists the linked three attributes used to make a skill check.",
          "$ref": "../_SkillCheck.schema.json#/$defs/SkillCheck"
        },
        "check_penalty": {
          "description": "In some cases, the target's Spirit or Toughness is applied as a penalty.",
          "$ref": "#/$defs/MagicalRuneCheckPenalty"
        },
        "parameters": {
          "description": "Measurable parameters of a magical rune.",
          "$ref": "#/$defs/MagicalRunePerformanceParameters"
        },
        "property": {
          "description": "The associated property.",
          "$ref": "../_SimpleReferences.schema.json#/$defs/PropertyReference"
        },
        "improvement_cost": {
          "description": "States which column is used to improve the skill.",
          "$ref": "#/$defs/MagicalRuneImprovementCost"
        },
        "src": {
          "$ref": "../source/_PublicationRef.schema.json#/$defs/PublicationRefs"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/MagicalRuneTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "check",
        "parameters",
        "property",
        "improvement_cost",
        "src",
        "translations"
      ],
      "additionalProperties": false
    },
    "MagicalRuneTranslation": {
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the magical rune.\n\nIf the rune has an option, the option’s name will/should not be included in\nthe name as well as its surrounding parenthesis. It will/should be combined\non demand.",
          "$ref": "../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        },
        "name_in_library": {
          "description": "The full name of the entry as stated in the sources. Only use when `name`\nneeds to be different from full name for text generation purposes.",
          "$ref": "../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        },
        "native_name": {
          "description": "The native name of the magical rune.",
          "$ref": "../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        },
        "effect": {
          "description": "The effect description may be either a plain text or a text that is\ndivided by a list of effects for each quality level. It may also be a\nlist for each two quality levels.",
          "$ref": "../_ActivatableSkillEffect.schema.json#/$defs/Effect"
        },
        "cost": {
          "type": "object",
          "properties": {
            "full": {
              "type": "string"
            },
            "abbr": {
              "type": "string"
            }
          },
          "required": [
            "full",
            "abbr"
          ],
          "additionalProperties": false
        },
        "crafting_time": {
          "type": "object",
          "properties": {
            "slow": {
              "type": "object",
              "properties": {
                "full": {
                  "type": "string"
                },
                "abbr": {
                  "type": "string"
                }
              },
              "required": [
                "full",
                "abbr"
              ],
              "additionalProperties": false
            },
            "fast": {
              "type": "object",
              "properties": {
                "full": {
                  "type": "string"
                },
                "abbr": {
                  "type": "string"
                }
              },
              "required": [
                "full",
                "abbr"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "slow",
            "fast"
          ],
          "additionalProperties": false
        },
        "duration": {
          "type": "object",
          "properties": {
            "slow": {
              "type": "object",
              "properties": {
                "full": {
                  "type": "string"
                },
                "abbr": {
                  "type": "string"
                }
              },
              "required": [
                "full",
                "abbr"
              ],
              "additionalProperties": false
            },
            "fast": {
              "type": "object",
              "properties": {
                "full": {
                  "type": "string"
                },
                "abbr": {
                  "type": "string"
                }
              },
              "required": [
                "full",
                "abbr"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "slow",
            "fast"
          ],
          "additionalProperties": false
        },
        "errata": {
          "$ref": "../source/_Erratum.schema.json#/$defs/Errata"
        }
      },
      "required": [
        "name",
        "effect",
        "cost",
        "crafting_time",
        "duration"
      ],
      "additionalProperties": false
    },
    "MagicalRuneCheckPenalty": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "CombatTechnique"
            },
            "combat_technique": {
              "$ref": "#/$defs/MagicalRuneCombatTechniqueCheckPenalty"
            }
          },
          "required": [
            "tag",
            "combat_technique"
          ],
          "additionalProperties": false
        }
      ]
    },
    "MagicalRuneCombatTechniqueCheckPenalty": {
      "type": "object",
      "properties": {
        "map": {
          "description": "A map from combat techniques to their modifiers.",
          "type": "array",
          "items": {
            "$ref": "#/$defs/MagicalRuneCombatTechniqueCheckPenaltyMapping"
          },
          "minItems": 1
        },
        "rest": {
          "$ref": "#/$defs/MagicalRuneCombatTechniqueCheckPenaltyRest"
        }
      },
      "required": [
        "map",
        "rest"
      ],
      "additionalProperties": false
    },
    "MagicalRuneCombatTechniqueCheckPenaltyMapping": {
      "type": "object",
      "properties": {
        "id": {
          "description": "The combat technique's identifier.",
          "$ref": "../_IdentifierGroup.schema.json#/$defs/CombatTechniqueIdentifier"
        },
        "modifier": {
          "description": "The check modifier for the specified combat technique.",
          "type": "integer"
        }
      },
      "required": [
        "id",
        "modifier"
      ],
      "additionalProperties": false
    },
    "MagicalRuneCombatTechniqueCheckPenaltyRest": {
      "type": "object",
      "properties": {
        "modifier": {
          "description": "The check modifier for combat techniques not specified in `map`.",
          "type": "integer"
        }
      },
      "required": [
        "modifier"
      ],
      "additionalProperties": false
    },
    "MagicalRunePerformanceParameters": {
      "description": "Measurable parameters of a magical rune.",
      "type": "object",
      "properties": {
        "cost": {
          "description": "The AE cost.",
          "$ref": "#/$defs/MagicalRuneCost"
        },
        "crafting_time": {
          "description": "The crafting time.",
          "$ref": "#/$defs/MagicalRuneCraftingTime"
        },
        "duration": {
          "description": "The duration.",
          "$ref": "#/$defs/MagicalRuneDuration"
        }
      },
      "required": [
        "cost",
        "crafting_time",
        "duration"
      ],
      "additionalProperties": false
    },
    "MagicalRuneCost": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Single"
            },
            "single": {
              "$ref": "#/$defs/SingleMagicalRuneCost"
            }
          },
          "required": [
            "tag",
            "single"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Disjunction"
            },
            "disjunction": {
              "$ref": "#/$defs/MagicalRuneCostDisjunction"
            }
          },
          "required": [
            "tag",
            "disjunction"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "DerivedFromOption"
            },
            "derived_from_option": {
              "type": "object",
              "properties": {},
              "required": [],
              "additionalProperties": false
            }
          },
          "required": [
            "tag",
            "derived_from_option"
          ],
          "additionalProperties": false
        }
      ]
    },
    "MagicalRuneOptionCost": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Single"
            },
            "single": {
              "$ref": "#/$defs/SingleMagicalRuneCost"
            }
          },
          "required": [
            "tag",
            "single"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Disjunction"
            },
            "disjunction": {
              "$ref": "#/$defs/MagicalRuneCostDisjunction"
            }
          },
          "required": [
            "tag",
            "disjunction"
          ],
          "additionalProperties": false
        }
      ]
    },
    "SingleMagicalRuneCost": {
      "type": "object",
      "properties": {
        "value": {
          "description": "The AE cost value.",
          "type": "integer",
          "minimum": 1
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/SingleMagicalRuneCostTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    },
    "SingleMagicalRuneCostTranslation": {
      "type": "object",
      "properties": {
        "note": {
          "description": "A note, appended to the generated string in parenthesis.",
          "$ref": "../_ResponsiveText.schema.json#/$defs/ResponsiveTextOptional"
        }
      },
      "required": [
        "note"
      ],
      "additionalProperties": false
    },
    "MagicalRuneCostDisjunction": {
      "type": "object",
      "properties": {
        "list": {
          "description": "A set of possible AE cost values.",
          "type": "array",
          "items": {
            "$ref": "#/$defs/SingleMagicalRuneCost"
          },
          "minItems": 2
        }
      },
      "required": [
        "list"
      ],
      "additionalProperties": false
    },
    "MagicalRuneCraftingTime": {
      "type": "object",
      "properties": {
        "value": {
          "description": "The (unitless) crafting time.",
          "oneOf": [
            {
              "const": 1
            },
            {
              "const": 2
            },
            {
              "const": 4
            }
          ]
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/MagicalRuneCraftingTimeTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    },
    "MagicalRuneCraftingTimeTranslation": {
      "type": "object",
      "properties": {
        "per": {
          "description": "The crafting time has to be per a specific countable entity, e.g. `8\naction per person`.",
          "$ref": "../_ResponsiveText.schema.json#/$defs/ResponsiveText"
        }
      },
      "required": [
        "per"
      ],
      "additionalProperties": false
    },
    "MagicalRuneDuration": {
      "type": "object",
      "properties": {
        "slow": {
          "description": "The duration on slow rune application.",
          "$ref": "../_ActivatableSkillDuration.schema.json#/$defs/CheckResultBasedDuration"
        },
        "fast": {
          "description": "The duration on fast rune application.",
          "$ref": "../_ActivatableSkillDuration.schema.json#/$defs/CheckResultBasedDuration"
        }
      },
      "required": [
        "slow",
        "fast"
      ],
      "additionalProperties": false
    },
    "MagicalRuneImprovementCost": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Constant"
            },
            "constant": {
              "$ref": "#/$defs/ConstantMagicalRuneImprovementCost"
            }
          },
          "required": [
            "tag",
            "constant"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "DerivedFromOption"
            },
            "derived_from_option": {
              "type": "object",
              "properties": {},
              "required": [],
              "additionalProperties": false
            }
          },
          "required": [
            "tag",
            "derived_from_option"
          ],
          "additionalProperties": false
        }
      ]
    },
    "ConstantMagicalRuneImprovementCost": {
      "type": "object",
      "properties": {
        "value": {
          "$ref": "../_ImprovementCost.schema.json#/$defs/ImprovementCost"
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    },
    "MagicalRuneOption": {
      "type": "object",
      "properties": {
        "id": {
          "description": "The magical rune option’s identifier. An unique, increasing integer.",
          "type": "integer",
          "minimum": 1
        },
        "cost": {
          "description": "The option-specific AE cost.",
          "$ref": "#/$defs/MagicalRuneOptionCost"
        },
        "improvement_cost": {
          "description": "The option-specific improvement cost.",
          "$ref": "../_ImprovementCost.schema.json#/$defs/ImprovementCost"
        },
        "suboption": {
          "$ref": "#/$defs/MagicalRuneSuboption"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/MagicalRuneOptionTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "cost",
        "improvement_cost",
        "suboption",
        "translations"
      ],
      "additionalProperties": false
    },
    "MagicalRuneSuboption": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Custom"
            },
            "custom": {
              "$ref": "#/$defs/CustomMagicalRuneSuboption"
            }
          },
          "required": [
            "tag",
            "custom"
          ],
          "additionalProperties": false
        }
      ]
    },
    "CustomMagicalRuneSuboption": {
      "type": "object",
      "properties": {
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/CustomMagicalRuneSuboptionTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "translations"
      ],
      "additionalProperties": false
    },
    "CustomMagicalRuneSuboptionTranslation": {
      "type": "object",
      "properties": {
        "examples": {
          "description": "One or more examples for the suboption.",
          "type": "array",
          "items": {
            "$ref": "../_NonEmptyString.schema.json#/$defs/NonEmptyString"
          }
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "MagicalRuneOptionTranslation": {
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the option.\n\nThe surrounding parenthesis will/should not be included, they will/should\nbe generated.",
          "$ref": "../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        },
        "native_name": {
          "description": "The native name of the magical rune option.",
          "$ref": "../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        }
      },
      "required": [
        "name",
        "native_name"
      ],
      "additionalProperties": false
    }
  }
}
