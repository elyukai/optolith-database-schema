{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "/magicalActions/_MusicTradition.schema.json",
  "$defs": {
    "MusicTraditionReference": {
      "description": "A reference to a music tradition with the music-tradition-specific name of\nthe entry",
      "type": "object",
      "properties": {
        "id": {
          "description": "The music tradition's identifier.",
          "type": "integer",
          "minimum": 1
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/MusicTraditionReferenceTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "translations"
      ],
      "additionalProperties": false
    },
    "MusicTraditionReferenceTranslation": {
      "type": "object",
      "properties": {
        "name": {
          "description": "The music-tradition-specific name of the entry.",
          "$ref": "../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "MusicDuration": {
      "type": "object",
      "properties": {
        "length": {
          "$ref": "#/$defs/MusicLength"
        },
        "reusability": {
          "$ref": "#/$defs/MusicReusability"
        }
      },
      "required": [
        "length",
        "reusability"
      ],
      "additionalProperties": false
    },
    "MusicLength": {
      "enum": [
        "Long",
        "Short"
      ]
    },
    "MusicReusability": {
      "enum": [
        "OneTime",
        "Sustainable"
      ]
    }
  }
}
