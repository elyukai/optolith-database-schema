{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "/magicalActions/GeodeRitual.schema.json",
  "$ref": "#/$defs/GeodeRitual",
  "$defs": {
    "GeodeRitual": {
      "title": "Geode Ritual",
      "type": "object",
      "properties": {
        "id": {
          "description": "The geode ritual's identifier. An unique, increasing integer.",
          "type": "integer",
          "minimum": 1
        },
        "check": {
          "description": "Lists the linked three attributes used to make a skill check.",
          "$ref": "../_SkillCheck.schema.json#/$defs/SkillCheck"
        },
        "parameters": {
          "description": "Measurable parameters of a geode ritual.",
          "$ref": "#/$defs/GeodeRitualPerformanceParameters"
        },
        "target": {
          "description": "The target category – the kind of creature or object – the skill affects.",
          "$ref": "../_ActivatableSkillTargetCategory.schema.json#/$defs/TargetCategory"
        },
        "property": {
          "description": "The associated property.",
          "$ref": "../_SimpleReferences.schema.json#/$defs/PropertyReference"
        },
        "prerequisites": {
          "$ref": "../_Prerequisite.schema.json#/$defs/GeodeRitualPrerequisites"
        },
        "src": {
          "$ref": "../source/_PublicationRef.schema.json#/$defs/PublicationRefs"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/GeodeRitualTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "check",
        "parameters",
        "target",
        "property",
        "src",
        "translations"
      ],
      "additionalProperties": false
    },
    "GeodeRitualTranslation": {
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the geode ritual.",
          "$ref": "../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        },
        "effect": {
          "description": "The effect description may be either a plain text or a text that is\ndivided by a list of effects for each quality level. It may also be a\nlist for each two quality levels.",
          "$ref": "../_ActivatableSkillEffect.schema.json#/$defs/Effect"
        },
        "casting_time": {
          "type": "object",
          "properties": {
            "full": {
              "type": "string"
            },
            "abbr": {
              "type": "string"
            }
          },
          "required": [
            "full",
            "abbr"
          ],
          "additionalProperties": false
        },
        "cost": {
          "type": "object",
          "properties": {
            "full": {
              "type": "string"
            },
            "abbr": {
              "type": "string"
            }
          },
          "required": [
            "full",
            "abbr"
          ],
          "additionalProperties": false
        },
        "range": {
          "type": "object",
          "properties": {
            "full": {
              "type": "string"
            },
            "abbr": {
              "type": "string"
            }
          },
          "required": [
            "full",
            "abbr"
          ],
          "additionalProperties": false
        },
        "duration": {
          "type": "object",
          "properties": {
            "full": {
              "type": "string"
            },
            "abbr": {
              "type": "string"
            }
          },
          "required": [
            "full",
            "abbr"
          ],
          "additionalProperties": false
        },
        "target": {
          "type": "string"
        },
        "errata": {
          "$ref": "../source/_Erratum.schema.json#/$defs/Errata"
        }
      },
      "required": [
        "name",
        "effect",
        "casting_time",
        "cost",
        "range",
        "duration",
        "target"
      ],
      "additionalProperties": false
    },
    "GeodeRitualPerformanceParameters": {
      "description": "Measurable parameters of a geode ritual.",
      "type": "object",
      "properties": {
        "casting_time": {
          "description": "The casting time.",
          "$ref": "#/$defs/GeodeRitualCastingTime"
        },
        "cost": {
          "description": "The AE cost.",
          "$ref": "#/$defs/GeodeRitualCost"
        },
        "range": {
          "description": "The range.",
          "$ref": "#/$defs/GeodeRitualRange"
        },
        "duration": {
          "description": "The duration.",
          "$ref": "#/$defs/GeodeRitualDuration"
        }
      },
      "required": [
        "casting_time",
        "cost",
        "range",
        "duration"
      ],
      "additionalProperties": false
    },
    "GeodeRitualCastingTime": {
      "type": "object",
      "properties": {
        "value": {
          "description": "The (unitless) casting time.",
          "type": "integer",
          "minimum": 1
        },
        "unit": {
          "description": "The casting time unit.",
          "$ref": "../SkillModificationLevel.schema.json#/$defs/SlowSkillCastingTimeUnit"
        }
      },
      "required": [
        "value",
        "unit"
      ],
      "additionalProperties": false
    },
    "GeodeRitualCost": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Fixed"
            },
            "fixed": {
              "$ref": "#/$defs/FixedGeodeRitualCost"
            }
          },
          "required": [
            "tag",
            "fixed"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Map"
            },
            "map": {
              "$ref": "../_ActivatableSkillCost.schema.json#/$defs/CostMap"
            }
          },
          "required": [
            "tag",
            "map"
          ],
          "additionalProperties": false
        }
      ]
    },
    "FixedGeodeRitualCost": {
      "type": "object",
      "properties": {
        "value": {
          "description": "The AE cost value.",
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    },
    "GeodeRitualRange": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Self"
            },
            "self": {
              "type": "object",
              "properties": {},
              "required": [],
              "additionalProperties": false
            }
          },
          "required": [
            "tag",
            "self"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Fixed"
            },
            "fixed": {
              "$ref": "#/$defs/FixedGeodeRitualRange"
            }
          },
          "required": [
            "tag",
            "fixed"
          ],
          "additionalProperties": false
        }
      ]
    },
    "FixedGeodeRitualRange": {
      "type": "object",
      "properties": {
        "value": {
          "description": "The range in steps/m.",
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    },
    "GeodeRitualDuration": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Immediate"
            },
            "immediate": {
              "type": "object",
              "properties": {},
              "required": [],
              "additionalProperties": false
            }
          },
          "required": [
            "tag",
            "immediate"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Fixed"
            },
            "fixed": {
              "$ref": "#/$defs/FixedGeodeRitualDuration"
            }
          },
          "required": [
            "tag",
            "fixed"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "CheckResultBased"
            },
            "check_result_based": {
              "$ref": "../_ActivatableSkillDuration.schema.json#/$defs/CheckResultBasedDuration"
            }
          },
          "required": [
            "tag",
            "check_result_based"
          ],
          "additionalProperties": false
        }
      ]
    },
    "FixedGeodeRitualDuration": {
      "type": "object",
      "properties": {
        "value": {
          "description": "The (unitless) duration.",
          "type": "integer",
          "minimum": 2
        },
        "unit": {
          "description": "The duration unit.",
          "$ref": "../_ActivatableSkillDuration.schema.json#/$defs/DurationUnit"
        }
      },
      "required": [
        "value",
        "unit"
      ],
      "additionalProperties": false
    }
  }
}
