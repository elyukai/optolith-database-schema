{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "/magicalActions/MagicalDance.schema.json",
  "$ref": "#/$defs/MagicalDance",
  "$defs": {
    "MagicalDance": {
      "title": "Magical Dance",
      "type": "object",
      "properties": {
        "id": {
          "description": "The magical dance's identifier. An unique, increasing integer.",
          "type": "integer",
          "minimum": 1
        },
        "check": {
          "description": "Lists the linked three attributes used to make a skill check.",
          "$ref": "../_SkillCheck.schema.json#/$defs/SkillCheck"
        },
        "parameters": {
          "description": "Measurable parameters of a magical dance.",
          "$ref": "#/$defs/MagicalDancePerformanceParameters"
        },
        "property": {
          "description": "The associated property.",
          "$ref": "../_SimpleReferences.schema.json#/$defs/PropertyReference"
        },
        "music_tradition": {
          "description": "The music tradition(s) the magical dance is available for. This also\ndefines the different names in each music tradition.",
          "type": "array",
          "items": {
            "$ref": "./_MusicTradition.schema.json#/$defs/MusicTraditionReference"
          },
          "minItems": 1
        },
        "improvement_cost": {
          "description": "States which column is used to improve the skill.",
          "$ref": "../_ImprovementCost.schema.json#/$defs/ImprovementCost"
        },
        "src": {
          "$ref": "../source/_PublicationRef.schema.json#/$defs/PublicationRefs"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "#/$defs/MagicalDanceTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "check",
        "parameters",
        "property",
        "music_tradition",
        "improvement_cost",
        "src",
        "translations"
      ],
      "additionalProperties": false
    },
    "MagicalDanceTranslation": {
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the magical dance.",
          "$ref": "../_NonEmptyString.schema.json#/$defs/NonEmptyString"
        },
        "effect": {
          "description": "The effect description may be either a plain text or a text that is\ndivided by a list of effects for each quality level. It may also be a\nlist for each two quality levels.",
          "$ref": "../_ActivatableSkillEffect.schema.json#/$defs/Effect"
        },
        "duration": {
          "type": "object",
          "properties": {
            "full": {
              "type": "string"
            },
            "abbr": {
              "type": "string"
            }
          },
          "required": [
            "full",
            "abbr"
          ],
          "additionalProperties": false
        },
        "cost": {
          "type": "object",
          "properties": {
            "full": {
              "type": "string"
            },
            "abbr": {
              "type": "string"
            }
          },
          "required": [
            "full",
            "abbr"
          ],
          "additionalProperties": false
        },
        "errata": {
          "$ref": "../source/_Erratum.schema.json#/$defs/Errata"
        }
      },
      "required": [
        "name",
        "effect",
        "duration",
        "cost"
      ],
      "additionalProperties": false
    },
    "MagicalDancePerformanceParameters": {
      "description": "Measurable parameters of a magical dance.",
      "type": "object",
      "properties": {
        "duration": {
          "$ref": "./_MusicTradition.schema.json#/$defs/MusicDuration"
        },
        "cost": {
          "$ref": "#/$defs/MagicalDanceCost"
        }
      },
      "required": [
        "duration",
        "cost"
      ],
      "additionalProperties": false
    },
    "MagicalDanceCost": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Fixed"
            },
            "fixed": {
              "$ref": "#/$defs/FixedMagicalDanceCost"
            }
          },
          "required": [
            "tag",
            "fixed"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "const": "Indefinite"
            },
            "indefinite": {
              "$ref": "#/$defs/IndefiniteMagicalDanceCost"
            }
          },
          "required": [
            "tag",
            "indefinite"
          ],
          "additionalProperties": false
        }
      ]
    },
    "FixedMagicalDanceCost": {
      "type": "object",
      "properties": {
        "value": {
          "description": "The (temporary) AE cost value.",
          "type": "integer",
          "minimum": 1
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "../FamiliarsTrick.schema.json#/$defs/FixedOneTimeCostTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    },
    "IndefiniteMagicalDanceCost": {
      "type": "object",
      "properties": {
        "modifier": {
          "description": "Specified if the indefinite description's result value is to be\nmodified by a certain number.",
          "$ref": "../_ActivatableSkillCheckResultBased.schema.json#/$defs/CheckResultBasedModifier"
        },
        "translations": {
          "description": "All translations for the entry, identified by IETF language tag (BCP47).",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}-[A-Z]{2}$": {
              "$ref": "../_ActivatableSkillCost.schema.json#/$defs/IndefiniteOneTimeCostTranslation"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      },
      "required": [
        "translations"
      ],
      "additionalProperties": false
    }
  }
}
