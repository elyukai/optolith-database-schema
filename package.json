{
  "name": "optolith-database-schema",
  "version": "0.8.0",
  "description": "Definitions and utilities for the flat-file database of Optolith, a character creation tool for the Pen and Paper RPG “The Dark Eye 5”, and its external integrations into other software.",
  "keywords": [
    "tde",
    "thedarkeye",
    "dsa",
    "dasschwarzeauge"
  ],
  "main": "./lib/main.js",
  "types": "./lib/main.d.ts",
  "scripts": {
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "build:gen": "node ./build/generate.js",
    "watch:gen": "node ./build/generate.js -w",
    "build": "npm run build:ts && npm run build:gen",
    "release": "standard-version",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Lukas Obermann",
  "license": "MPL-2.0",
  "dependencies": {
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "optolith-tsjsonschemamd": "^0.5.20",
    "standard-version": "^9.5.0",
    "typescript": "^4.7.4"
  },
  "repository": "github:elyukai/optolith-database-schema",
  "bugs": {
    "url": "https://github.com/elyukai/optolith-database-schema/issues"
  },
  "type": "module"
}
