{
  "name": "optolith-database-schema",
  "version": "0.18.13",
  "description": "Definitions and utilities for the flat-file database of Optolith, a character creation tool for the Pen and Paper RPG “The Dark Eye 5”, and its external integrations into other software.",
  "keywords": [
    "tde",
    "thedarkeye",
    "dsa",
    "dasschwarzeauge"
  ],
  "files": [
    "lib",
    "schema",
    "AUTHORS",
    "CHANGELOG.md"
  ],
  "main": "./lib/main.js",
  "exports": {
    ".": "./lib/main.js",
    "./errors": "./lib/errors.js",
    "./cache/*": "./lib/cache/*.js",
    "./config/*": "./lib/config/*.js",
    "./rendering/*": "./lib/rendering/*.js",
    "./types": "./lib/types/index.js",
    "./types/*": "./lib/types/*.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "node ./lib/test.js",
    "release": "commit-and-tag-version",
    "release:sign": "commit-and-tag-version --sign --signoff"
  },
  "author": "Lukas Obermann",
  "license": "MPL-2.0",
  "dependencies": {
    "@optolith/helpers": "^0.2.2",
    "tsondb": "^0.11.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "commit-and-tag-version": "^12.6.0",
    "typescript": "^5.9.3"
  },
  "repository": "github:elyukai/optolith-database-schema",
  "bugs": {
    "url": "https://github.com/elyukai/optolith-database-schema/issues"
  },
  "type": "module"
}
