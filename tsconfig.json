{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "ESNext",
  },
  "include": [
    "src/**/*"
  ]
}
