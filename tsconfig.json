{
  "compilerOptions": {
    "strict": true,
    "lib": ["ESNext"],
    "module": "nodenext",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "outDir": "lib"
  },
  "include": [
    "src/**/*"
  ]
}
